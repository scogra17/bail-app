<div>
  <h3>Status</h3>
  <% if @event.canceled? %>
    <p>CANCELED</p>
  <% else %>
    <p>NOT CANCELED</p>
  <% end %>
</div>
<div>
  <p>Name: <%= @event.name %></p>
  <p>Location: <%= @event.location %></p>
  <p>Date: <%= @event.date %></p>
  <p>Time: <%= @event.time %></p>
  <p>Description: <%= @event.description %></p>
  <p>Location: <%= @event.location %></p>
  <div>
    <h3>Attendees</h3>
    <% if @event.attendees %>
      <ul>
      <% @event.attendees.each do |attendee|%>
        <li>
          <%= attendee.name %> | <%= attendee.email %>
        </li>
      <% end %>
      </ul>
    <% end %>
  </div>

  <form action="/event/<%= @event.key %>/bail" method="get">
    <button type="submit">Bail!</button>
  </form>

  <form action="/event/<%= @event.key %>/attend" method="get">
    <button type="submit">Add attendance</button>
  </form>
</div>